<?xml version='1.0' encoding='utf-8'?>

<Application xmlns="http://schemas.microsoft.com/windows/2009/Ribbon">
  <Application.Commands>
    
    <Command Name="tabHome" Symbol="cmdTabHome">
      <Command.LabelTitle>
        <String>Home</String>
      </Command.LabelTitle>
    </Command>
    
    <Command Name="tabMore" Symbol="cmdTabMore">
      <Command.LabelTitle>
        <String>More</String>
      </Command.LabelTitle>
    </Command>

    <Command Name="New" Symbol="IDC_NEW">
      <Command.LabelTitle>
        <String>New</String>
      </Command.LabelTitle>
      <Command.LabelDescription>
        <String>Create a new file.</String>
      </Command.LabelDescription>
    </Command>

    <Command Name="Exit" Symbol="IDR_EXIT" Id="8201">
      <Command.LabelTitle>
        <String>Exit</String>
      </Command.LabelTitle>
      <Command.LabelDescription>
        <String>Exit the current program.</String>
      </Command.LabelDescription>
    </Command>
    
  </Application.Commands>

  <Application.Views>
    <Ribbon>
      
      <Ribbon.ApplicationMenu >
        <ApplicationMenu CommandName="FileMenu" >
          <MenuGroup Class="MajorItems" >
            <Button CommandName="New" />
            <Button CommandName="Open" />
            <Button CommandName="Save" />
            <Button CommandName="SaveAs" />
          </MenuGroup>
          <MenuGroup >
            <Button CommandName="Exit" />
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu >

      <Ribbon.Tabs>

        <Tab CommandName="tabHome">
          <Group CommandName="tabCommon" SizeDefinition="ThreeButtons">
            <Button CommandName="InsertPicture"/>
            <Button CommandName="Hyperlink"/>
            <ToggleButton CommandName="cmdToggleButton1" />
          </Group>
          <Group>
            <Button />
          </Group>
        </Tab>
        
        <Tab CommandName="More">
          <Group>
            <Button CommandName="cmdExit1" />
            <Button CommandName="cmdExit2" />
            <ComboBox />
          </Group>
        </Tab>
        
      </Ribbon.Tabs>
    </Ribbon>
  </Application.Views>
</Application>